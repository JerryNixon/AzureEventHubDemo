<Page x:Class="WindowsClient.Views.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:Core="using:Microsoft.Xaml.Interactions.Core"
      xmlns:Interactivity="using:Microsoft.Xaml.Interactivity"
      xmlns:controls="using:Template10.Controls"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="using:WindowsClient.Views"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:vm="using:WindowsClient.ViewModels"
      mc:Ignorable="d">

    <Page.DataContext>
        <vm:MainPageViewModel x:ConnectionId='1' x:Name="ViewModel" />
    </Page.DataContext>

    <RelativePanel>

        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:ConnectionId='2' x:Name="VisualStateGroup">
                <VisualStateGroup.Transitions>
                    <VisualTransition GeneratedDuration="0:0:0.3">
                        <VisualTransition.GeneratedEasingFunction>
                            <SineEase EasingMode="EaseInOut" />
                        </VisualTransition.GeneratedEasingFunction>
                    </VisualTransition>
                </VisualStateGroup.Transitions>
                <VisualState x:ConnectionId='3' x:Name="MasterVisualState">
                    <VisualState.Setters>
                        <Setter Target="OverlayContainer.(UIElement.RenderTransform).(CompositeTransform.ScaleX)" Value="0" />
                        <Setter Target="OverlayContainer.(UIElement.RenderTransform).(CompositeTransform.ScaleY)" Value="0" />
                        <Setter Target="CloseDetailView.(UIElement.Visibility)" Value="Collapsed" />
                    </VisualState.Setters>
                    <Storyboard>
                        <DoubleAnimation d:IsOptimized="True"
                                         Duration="0"
                                         Storyboard.TargetName="OverlayContainer"
                                         Storyboard.TargetProperty="(UIElement.Opacity)"
                                         To="0" />
                        <DoubleAnimation d:IsOptimized="True"
                                         Duration="0"
                                         Storyboard.TargetName="CloseDetailView"
                                         Storyboard.TargetProperty="(UIElement.Opacity)"
                                         To="0" />
                    </Storyboard>
                </VisualState>
                <VisualState x:ConnectionId='4' x:Name="DetailsVisualState">
                    <VisualState.Setters>
                        <Setter Target="appBarToggleButton.(UIElement.Visibility)" Value="Collapsed" />
                    </VisualState.Setters>
                    <Storyboard>
                        <DoubleAnimation d:IsOptimized="True"
                                         Duration="0"
                                         Storyboard.TargetName="OverlayContainer"
                                         Storyboard.TargetProperty="(UIElement.Opacity)"
                                         To="0.985" />
                        <DoubleAnimation d:IsOptimized="True"
                                         Duration="0"
                                         Storyboard.TargetName="OverlayContainer"
                                         Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.ScaleY)"
                                         To="1" />
                        <DoubleAnimation d:IsOptimized="True"
                                         Duration="0"
                                         Storyboard.TargetName="OverlayContainer"
                                         Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.ScaleX)"
                                         To="1" />
                        <DoubleAnimation d:IsOptimized="True"
                                         Duration="0"
                                         Storyboard.TargetName="appBarToggleButton"
                                         Storyboard.TargetProperty="(UIElement.Opacity)"
                                         To="0" />
                    </Storyboard>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

        <Image Width="275"
               Margin="-280,0,0,136.333"
               HorizontalAlignment="Left"
               Source="ms-appx:///Assets/Pallette.png" />

        <RelativePanel x:ConnectionId='5' x:Name="ChatContainer" Width="250"
                       RelativePanel.AlignBottomWithPanel="True"
                       RelativePanel.AlignRightWithPanel="True"
                       RelativePanel.AlignTopWithPanel="True">
            <RelativePanel x:ConnectionId='18' x:Name="InputContainer"
                           Height="100"
                           RelativePanel.AlignBottomWithPanel="True"
                           RelativePanel.AlignLeftWithPanel="True"
                           RelativePanel.AlignRightWithPanel="True">
                <TextBox Padding="4,4,64,4"
                         RelativePanel.AlignBottomWithPanel="True"
                         RelativePanel.AlignLeftWithPanel="True"
                         RelativePanel.AlignRightWithPanel="True"
                         RelativePanel.AlignTopWithPanel="True" />
                <Button Width="32"
                        Height="32"
                        Margin="8"
                        Padding="0"
                        RelativePanel.AlignBottomWithPanel="True"
                        RelativePanel.AlignRightWithPanel="True">
                    <SymbolIcon Symbol="Send" />
                </Button>
            </RelativePanel>
            <ListView x:ConnectionId='19' x:Name="MessageListView"
                      Background="#FFF2C300"
                      ItemsSource="{Binding Messages}"
                      RelativePanel.Above="InputContainer"
                      RelativePanel.AlignLeftWithPanel="True"
                      RelativePanel.AlignRightWithPanel="True"
                      RelativePanel.AlignTopWithPanel="True"
                      SelectionMode="None">
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <RelativePanel Margin="{Binding Direction, Converter={StaticResource ChatMarginConverter}}">
                            <TextBlock x:Name="Date"
                                       Margin="8,8,0,0"
                                       FontSize="8"
                                       Text="{Binding Date}" />
                            <TextBlock x:Name="Text"
                                       Margin="8,0,8,0"
                                       RelativePanel.Below="Date"
                                       Text="{Binding Text}"
                                       TextWrapping="Wrap" />
                        </RelativePanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </RelativePanel>

        <RelativePanel x:ConnectionId='6' x:Name="MainContentContainer"
                       Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
                       RelativePanel.AlignBottomWithPanel="True"
                       RelativePanel.AlignLeftWithPanel="True"
                       RelativePanel.AlignTopWithPanel="True"
                       RelativePanel.LeftOf="ChatContainer"
                       Visibility="Visible">

            <controls:PageHeader x:ConnectionId='7' x:Name="pageHeader"
                                 Content="Cognitive Services Demo App"
                                 RelativePanel.AlignLeftWithPanel="True"
                                 RelativePanel.AlignRightWithPanel="True"
                                 RelativePanel.AlignTopWithPanel="True"
                                 RequestedTheme="Dark">
                <AppBarToggleButton x:ConnectionId='16' x:Name="appBarToggleButton"
                                    Icon="Play"
                                    IsChecked="{Binding IsEnabled, Mode=TwoWay}"
                                    Label="Enable" />
                <AppBarButton x:ConnectionId='17' x:Name="CloseDetailView"
                              Icon="Clear"
                              Label="Close"
                                                    />
            </controls:PageHeader>

            <ScrollViewer Background="White"
                          RelativePanel.AlignBottomWithPanel="True"
                          RelativePanel.AlignLeftWithPanel="True"
                          RelativePanel.AlignRightWithPanel="True"
                          RelativePanel.Below="pageHeader">
                <ItemsControl ItemsSource="{Binding Minutes}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <RelativePanel Width="96"
                                               Height="96"
                                               Margin="4"
                                               Background="#FF0099F6">
                                    <TextBlock Foreground="White"
                                               RelativePanel.AlignHorizontalCenterWithPanel="True"
                                               RelativePanel.AlignVerticalCenterWithPanel="True"
                                               TextAlignment="Center">
                                        <Run FontSize="16" Text="Minute" />
                                        <LineBreak />
                                        <Run FontSize="48"
                                             FontWeight="Bold"
                                             Text="{Binding MinuteString}" />
                                    </TextBlock>
                                </RelativePanel>
                                <ItemsControl ItemsSource="{Binding Items}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <RelativePanel x:ConnectionId='15' Width="48"
                                                           Height="48"
                                                           Opacity="{Binding IsActive, Converter={StaticResource HalfWhenFalseConverter}}"
                                                                                               
                                                                                             
                                                           RenderTransformOrigin="0.5,0.15"
                                                                               >
                                                <RelativePanel.RenderTransform>
                                                    <CompositeTransform ScaleX="{Binding IsActive, Converter={StaticResource OneWhenFalseConverter}}" ScaleY="{Binding IsActive, Converter={StaticResource OneWhenFalseConverter}}" />
                                                </RelativePanel.RenderTransform>
                                                <Ellipse x:Name="ellipse"
                                                         Margin="4"
                                                         Fill="#FF00B844"
                                                         IsHitTestVisible="False"
                                                         RelativePanel.AlignBottomWithPanel="True"
                                                         RelativePanel.AlignLeftWithPanel="True"
                                                         RelativePanel.AlignRightWithPanel="True"
                                                         RelativePanel.AlignTopWithPanel="True"
                                                         RenderTransformOrigin="0.5,0.5">
                                                </Ellipse>
                                                <TextBlock MaxWidth="24"
                                                           FontSize="8"
                                                           Foreground="White"
                                                           MaxLines="2"
                                                           RelativePanel.AlignHorizontalCenterWithPanel="True"
                                                           RelativePanel.AlignVerticalCenterWithPanel="True"
                                                           Text="{Binding Phrase}"
                                                           TextTrimming="CharacterEllipsis"
                                                           TextWrapping="Wrap" />
                                            </RelativePanel>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <RelativePanel x:ConnectionId='8' x:Name="OverlayContainer"
                           d:DataContext="{Binding Minutes[0].Items[0]}"
                           RelativePanel.AlignBottomWithPanel="True"
                           RelativePanel.AlignLeftWithPanel="True"
                           RelativePanel.AlignRightWithPanel="True"
                           RelativePanel.Below="pageHeader"
                           RenderTransformOrigin="0.1,0.1">
                <RelativePanel.RenderTransform>
                    <CompositeTransform ScaleX="0.5" ScaleY="0.5" />
                </RelativePanel.RenderTransform>
                <RelativePanel.Background>
                    <SolidColorBrush Color="#FF1F1F1F" />
                </RelativePanel.Background>
                <Image x:ConnectionId='9' x:Name="Image"
                       Height="125"
                       MaxWidth="125"
                       Margin="8,8,0,0"
                       RelativePanel.AlignLeftWithPanel="True"
                       RelativePanel.AlignTopWithPanel="True"
                       Source="{Binding Image}"
                       Stretch="UniformToFill" />
                <Grid x:ConnectionId='10' x:Name="Phrase"
                      Height="125"
                      Margin="8,8,8,0"
                      Background="#FF00B844"
                      RelativePanel.AlignTopWithPanel="True"
                      RelativePanel.LeftOf="Date"
                      RelativePanel.RightOf="Image">
                    <TextBlock Margin="16,8"
                               VerticalAlignment="Center"
                               FontSize="20"
                               Foreground="White"
                               Text="{Binding Phrase}"
                               TextTrimming="WordEllipsis"
                               TextWrapping="Wrap" />
                </Grid>
                <Grid x:ConnectionId='11' x:Name="Date"
                      Margin="0,8,8,0"
                      Background="#FFF2C300"
                      RelativePanel.AlignRightWithPanel="True">
                    <TextBlock Width="75"
                               Margin="8"
                               FontSize="12"
                               FontWeight="Bold"
                               Foreground="White"
                               Text="Wednesday"
                               TextAlignment="Center"
                               TextWrapping="Wrap" />
                </Grid>
                <RelativePanel x:ConnectionId='12' x:Name="Minute"
                               Margin="0,8,8,0"
                               Background="#FF0099F6"
                               RelativePanel.AlignBottomWith="Phrase"
                               RelativePanel.AlignRightWithPanel="True"
                               RelativePanel.Below="Date"
                               RelativePanel.RightOf="Phrase">
                    <TextBlock Foreground="White"
                               RelativePanel.AlignHorizontalCenterWithPanel="True"
                               RelativePanel.AlignVerticalCenterWithPanel="True"
                               TextAlignment="Center">
                        <Run FontSize="16" Text="Minute" />
                        <LineBreak />
                        <Run FontSize="48"
                             FontWeight="Bold"
                             Text="{Binding MinuteString}" />
                    </TextBlock>
                </RelativePanel>
                <WebView x:ConnectionId='13' x:Name="WebView"
                         Margin="8"
                         RelativePanel.AlignBottomWithPanel="True"
                         RelativePanel.AlignLeftWithPanel="True"
                         RelativePanel.AlignRightWithPanel="True"
                         RelativePanel.Below="Phrase">
                    <Interactivity:Interaction.Behaviors>
                        <Core:EventTriggerBehavior EventName="NavigationStarting">
                            <Core:ChangePropertyAction PropertyName="Visibility"
                                                       TargetObject="{Binding ElementName=ProgressBar}"
                                                       Value="Visible" />
                        </Core:EventTriggerBehavior>
                        <Core:EventTriggerBehavior EventName="NavigationCompleted">
                            <Core:ChangePropertyAction PropertyName="Visibility"
                                                       TargetObject="{Binding ElementName=ProgressBar}"
                                                       Value="Collapsed" />
                        </Core:EventTriggerBehavior>
                        <Core:EventTriggerBehavior EventName="NavigationFailed">
                            <Core:ChangePropertyAction PropertyName="Visibility" Value="Collapsed" />
                            <Core:ChangePropertyAction PropertyName="Visibility"
                                                       TargetObject="{Binding ElementName=ProgressBar}"
                                                       Value="Collapsed" />
                        </Core:EventTriggerBehavior>
                    </Interactivity:Interaction.Behaviors>
                </WebView>
                <ProgressBar x:ConnectionId='14' x:Name="ProgressBar"
                             Margin="8"
                             IsIndeterminate="True"
                             RelativePanel.AlignLeftWithPanel="True"
                             RelativePanel.AlignRightWithPanel="True"
                             RelativePanel.Below="Phrase" />
            </RelativePanel>

        </RelativePanel>
    </RelativePanel>

</Page>


